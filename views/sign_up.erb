<form class="form sign" method="post" action="/sign-up" target="_parent">
  <div class="title sign">
    <h2>START WRITING</h2>
  </div>
  <input class="input sign" type="text" name="name" placeholder="name" required />
  <input class="input sign" type="email" name="email" placeholder="email" required />
  <input class="input sign" type="text" name="bday" placeholder="birthday" onfocus="(this.type='date')" required />
  <input class="input sign" type="password" name="password" placeholder="password" required />  
  <input class="button sign" type="submit" value="SIGN UP" />
</form>